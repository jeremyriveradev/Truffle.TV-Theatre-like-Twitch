{
  "name": "Truffle Addon - Theatre like Twitch",
  "description": "Video resize when chat is hidden",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["*://youtube.com/*",
        "*://www.youtube.com/*"],
      "js": ["content-scripts/content-script.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
